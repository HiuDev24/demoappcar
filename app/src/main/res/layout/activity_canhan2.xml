<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CÁ NHÂN"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imagea"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/canhan"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/dangnhap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:drawableLeft="@drawable/ic_outline_perm_phone_msg_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="   Số điện thoại hoặc email"
            android:inputType="textPersonName"
            android:padding="10dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng nhập từ "
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/bt_fb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#0B529E"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:text=" Đăng nhập với tài khoản Facebook"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:text="Đăng nhập với tài khoản Google"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chưa có tài khoản ? "
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/Dangky"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#046A21" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Với việc đăng nhập , bạn đống ý với"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chính sách và quy định của công ty"
        android:gravity="center"
        android:textColor="#157147"
        android:layout_marginTop="3dp"/>
</LinearLayout>